@model Ad

<div class="container mt-4">
    <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.id" class="text-decoration-none">
        <div class="card position-relative border shadow-sm d-flex flex-row" style="border: none; width: 100%; overflow: hidden; background-color: white;">
            @if (Model.user.isFeatured)
            {
                <span class="badge bg-warning text-dark featured-tag">Featured</span>
            }
            <img src="@Model.Images.First().imageUrl" class="card-img-left" alt="Property Image" style="height: 340px; width: 250px; object-fit: cover;">

            <div class="card-body" style="flex: 1; padding: 20px;">
                <h5 class="card-title text-primary">
                    EGP @String.Format("{0:N0}", @Model.price)
                </h5>
                <h5 class="card-title text-primary" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap; width: 600px;">
                    @Model.title
                </h5>
                <p class="card-text" style="font-size: 1.1rem;">
                    <strong>@Model.rentalFrequency.ToUpper()</strong>
                </p>

                <p class="card-text">
                    <i class="fas fa-bed"></i> @Model.bedrooms Beds &nbsp;
                    <i class="fas fa-bath"></i> @Model.bathrooms Baths &nbsp;
                    <i class="fas fa-ruler-combined"></i> @Model.area SQM &nbsp;
                </p>

                <p class="card-text" style="font-size: 0.95rem; color: #7D7D7D;">
                    @Model.amenities.Replace(",", "")
                </p>

                <div style="display: flex; justify-content: space-between; margin-top: 50px;">
                    <p class="card-text text-muted">@Model.city, @Model.governorate</p>
                    <p class="card-text text-muted">@Model.updatedAt.TimeAgo()</p>
                </div>
            </div>
        </div>
    </a>
</div>

<style>
    .featured-tag {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 10;
        padding: 8px 12px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 12px;
    }
</style>