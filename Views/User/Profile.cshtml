@model User
@{
    Layout = "_ThemelessLayout";
}


<div class="container rounded bg-white mt-5 card">
    <form asp-action="Profile" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" src="@(Model.image)" width="90">
                    <span class="font-weight-bold">@Model.name</span>
                    <span class="text-black-50">@Model.email</span>
                    <span>@Model.governorate</span>
                </div>
                <input type="file" name="ProfileImage" class="form-control w-75 mx-auto">
            </div>

            <div class="col-md-8">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <a asp-action="Index" asp-controller="Home" class="text-decoration-none text-black">
                            <div class="d-flex flex-row align-items-center back">
                                <i class="fa fa-arrow-left mr-1 mb-1 mx-2"></i>
                                <h6>Back to home</h6>
                            </div>
                        </a>
                        <h6 class="text-right">Edit Profile</h6>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-6">
                            <input asp-for="name" class="form-control" value="@Model.name" placeholder="Full Name">
                        </div>
                        <div class="col-md-6">
                            <input asp-for="email" class="form-control" value="@Model.email" readonly>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <input asp-for="phone" class="form-control" value="@Model.phone" placeholder="Mobile Phone Number">
                        </div>
                        <div class="col-md-6">
                            <input asp-for="whatsapp" class="form-control" value="@Model.whatsapp" placeholder="Whatsapp Number">
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <input asp-for="governorate" class="form-control" value="@Model.governorate" placeholder="Governorate">
                        </div>
                        <div class="col-md-6">
                            <input asp-for="city" class="form-control" value="@Model.city" placeholder="City">
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <input asp-for="university" class="form-control" value="@Model.university" placeholder="University">
                        </div>
                        <div class="col-md-6">
                            <input asp-for="degree" class="form-control" value="@Model.degree" placeholder="Degree">
                        </div>
                    </div>
                    <input asp-for="id" class="form-control" value="@Model.id" hidden>
                    <input asp-for="password" class="form-control" value="@Model.password" hidden>
                    <div class="mt-5 text-right">
                        <button class="btn btn-primary profile-button" type="submit">Save Profile</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
