@model Ad

<div class="container mt-4">
    <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.id" class="text-decoration-none">
        <div class="card position-relative" style="width: 100%; border: none;">
            <!-- Featured Tag (conditionally displayed if Model.isFeatured is true) -->
            @if (Model.user.isFeatured)
            {
                <span class="badge bg-warning text-dark featured-tag">Featured</span>
            }

            <img src="@Model.Images.First().imageUrl" class="card-img-top" alt="Property Image" style="height: 200px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title text-primary">EGP @String.Format("{0:N0}", @Model.price)</h5>
                <p class="card-text text-truncate">@Model.description</p>
                <p class="card-text">
                    <i class="fas fa-bed"></i> @Model.bedrooms
                    <i class="fas fa-bath"></i> @Model.bathrooms
                    <i class="fas fa-chart-area"></i> @Model.area sqm
                </p>
                <p class="card-text"><small class="text-muted">@Model.city, @Model.governorate</small></p>
                <p class="card-text"><small class="text-muted">@Model.updatedAt.TimeAgo()</small></p>
            </div>
        </div>
    </a>
</div>

<style>
    .featured-tag {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 10;
        padding: 8px 12px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 12px;
    }
</style>
