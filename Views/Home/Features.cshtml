                    {
                        <button disabled class="btn btn-secondary btn-lg me-2" role="button" asp-action="Sponsor" asp-controller="User">Premium <i class="fa fa-certificate ms-2 text-success"></i></button>
                    }
                    else
                    {
                        <a class="btn btn-secondary btn-lg me-2" role="button" asp-action="Sponsor" asp-controller="User">Go Premium</a>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <div><img class="rounded img-fluid w-100 fit-cover" style="min-height: 300px;" src="/images/assets/img/illustrations/ranking.svg"></div>
            </div>
        </div>
